<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    tools:ignore="InvalidNavigation"
    app:startDestination="@id/mainFlowFragment">


    <include app:graph="@navigation/apps_graph" />
    <include app:graph="@navigation/movies_graph" />
    <fragment
        android:id="@+id/mainFlowFragment"
        android:name="ru.dmitryskor.movies.MainFlowFragment"
        android:label="MainFlowFragment"
        tools:layout="@layout/flow_fragment_main">
        <action
            android:id="@+id/action_mainFlowFragment_to_movies_graph"
            app:destination="@id/movies_graph" />
        <action
            android:id="@+id/action_mainFlowFragment_to_apps_graph"
            app:destination="@id/apps_graph" />
    </fragment>


</navigation>