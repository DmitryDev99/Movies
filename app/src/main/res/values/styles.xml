<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--region Элементы управления -->

    <!--region Кнопки-->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_main</item>
        <item name="minHeight">48dp</item>
        <item name="minWidth">88dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Main">
        <item name="android:textAppearance">@style/Text.P1.Main</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
    </style>
    <!--endregion-->
    <!--endregion-->

    <!--region Текст -->
    <style name="Text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

