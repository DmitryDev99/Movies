        <item name="android:textSize">36sp</item>
    </style>
    <style name="Text.H1.Main"/>
    <style name="Text.H1.Secondary">
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="Text.H1.Placeholder">
        <item name="android:textColor">@color/placeholder_text</item>
    </style>
    <style name="Text.H1.Inverted">
        <item name="android:textColor">@color/main_text_inverted</item>
    </style>
